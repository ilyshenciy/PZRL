SOURCES=main.c
FORLIBRARY=StringUtil.o Coder.o
LIBRARY=libCod.so
TARGET=encoder

all: $(TARGET)

$(TARGET): main.o libCod.so
	gcc main.o -o $(TARGET) -std=c99 -L. -lCod -Wl,-rpath,.

main.o: main.c
	gcc $< -c -o $@ -std=c99

$(LIBRARY): $(FORLIBRARY)
	gcc StringUtil.o Coder.o -shared -o $(LIBRARY)

StringUtil.o: StringUtil.c
	gcc -c -fPIC $< -std=c99

Coder.o: Coder.c
	gcc -c -fPIC $< -std=c99

clean:
	rm -f *.o *.so $(TARGET)
